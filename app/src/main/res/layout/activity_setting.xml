<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_f7f7f7"
    android:orientation="vertical">

    <include layout="@layout/title_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:layout_marginTop="@dimen/dp4"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp15">

        <ImageView
            android:id="@+id/set_iv_head"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:scaleType="fitXY"
            android:src="@mipmap/toux" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/set_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="姓名"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/set_tv_changeAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="切换账号"
                    android:textColor="@color/text_4c9aeb"
                    android:textSize="@dimen/sp12" />

            </LinearLayout>

            <TextView
                android:id="@+id/set_tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/sp14" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_ll_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp47"
        android:layout_marginTop="@dimen/dp12"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退出当前账号"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yjt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/set_tv_telInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机设备"
        android:textSize="@dimen/sp10"
        android:textColor="@color/text_4d4d4d"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp20"/>

</LinearLayout>
