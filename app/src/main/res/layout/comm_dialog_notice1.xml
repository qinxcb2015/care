<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp25"
    android:layout_marginRight="@dimen/dp25"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp125"
        android:background="@drawable/dialog_shape_corner"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/dialog_content1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:text="内容"
            android:textColor="@color/text_808080"
            android:textSize="@dimen/sp13" />

        <include layout="@layout/line_layout" />

        <TextView
            android:id="@+id/dialog_bottom1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center"
            android:text="底部"
            android:textColor="@color/text_3b93f5"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

</LinearLayout>